{% extends layout %}
{% block  content %}
<main class="container mt-3">
    {% include 'components/meepform.njk' %}
    <div>
        <ul class="list-group">
        {% for meep in meeps %}
            <li class="list-group-item d-flex justify-content-between">
                {{meep.meep}}
                <div class="d-flex">
                    <div class="form-check me-3">
                        <input
                            class="form-check-input"
                            type="checkbox"
                            value="{{meep.completed}}"
                            name="meep-{{meep.id}}"
                            id="meep-{{meep.id}}"
                            {% if meep.completed %}checked{% endif %}>
                        <label
                            class="form-check-label"
                            for="meep-{{meep.id}}">
                            Completed
                        </label>
                    </div>
                    <a
                        href="/meeps/{{meep.id}}/delete"
                        class="btn btn-sm btn-danger">
                        Delete meep
                    </a>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</main>
<script src="/javascripts/complete.js"></script>
{% endblock %}